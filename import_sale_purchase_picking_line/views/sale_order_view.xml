<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_import_sale_purchase_picking_line" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.import_sale_purchase_picking_line</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header/button[last()]" position="after">
                <button name="action_line_import" string="Import Line" 
                        class="oe_highlight" type="object" 
                        attrs="{
                            'invisible': [
                                ('state', '!=', 'draft')
                            ]
                        }"/>
            </xpath>
        </field>
    </record>
</odoo>
