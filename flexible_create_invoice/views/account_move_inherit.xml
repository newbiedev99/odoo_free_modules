<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_view_form" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="delivery_ids" widget="many2many_tags"
                        attrs="{'readonly': [('move_type', 'in', ('out_invoice', 'in_invoice'))],
                                'invisible': [('move_type', 'not in', ('out_invoice', 'in_invoice'))]}" />
                <field name="invoice_do_flag" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
