<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_view_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="unique_line" invisible="1" />
            </xpath>
        </field>
    </record>    

</odoo>
