<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_inherit_stock_tree_view" model="ir.ui.view">
        <field name="name">stock.picking.inherit.stock.tree.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="invoice_number" />
            </xpath>
            <xpath expr="//notebook/page[3]/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="before">
                <field name="unique_line" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
