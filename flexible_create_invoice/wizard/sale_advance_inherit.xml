<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_advance_payment_inv_inherit_form_wizard" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.inherit.form.wizard</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deposit_taxes_id']" position="after">
                <field name="create_inv_from" 
                        class="oe_inline" 
                        widget="radio"
                        attrs="{'invisible': [('advance_payment_method', '!=', 'delivered')]}" />
                <field name="delivery_order_ids" 
                        widget="many2many_tags"
                        domain="delivery_order_ids_domain"
                        options="{'no_create_edit': True, 'no_create': True}"
                        attrs="{'invisible': [('create_inv_from', '!=', 'delivery_order')]}"/>
                <field name="delivery_order_ids_domain" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
