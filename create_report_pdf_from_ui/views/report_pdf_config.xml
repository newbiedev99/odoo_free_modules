<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_pdf_config_view_tree" model="ir.ui.view">
        <field name="name">report.pdf.config.view.tree</field>
        <field name="model">report.pdf.config</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="paperformat_id" />
                <field name="report_id" />
            </tree>
        </field>
    </record>

    <record id="report_pdf_config_view_form" model="ir.ui.view">
        <field name="name">report.pdf.config.view.form</field>
        <field name="model">report.pdf.config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Set to draft" states="active" name="set_to_draft" type="object" class="btn btn-secondary"/>
                    <button string="Set to active" states="draft" name="set_to_active" type="object" class="oe_highlight"/>
                    <button string="Create or Edit Layout" name="create_edit_report_layout" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group name="left_config">
                            <field name="name" />
                            <field name="format" />
                            <field name="orientation" />
                            <field name="page_height" attrs="{'invisible': [('format','!=','custom')]}" />
                            <field name="page_width" attrs="{'invisible': [('format','!=','custom')]}" />
                            <field name="paperformat_id" readonly="1" />
                            <field name="report_id" readonly="1" />
                        </group>
                        <group name="right_config">
                            <field name="model" />
                            <field name="margin_top" readonly="0" />
                            <field name="margin_bottom" readonly="0" />
                            <field name="margin_left" readonly="0" />
                            <field name="margin_right" readonly="0" />
                        </group>
                    </group>
                    <notebook>
                        <page name="architecture" string="Architecture">
                            <field name="report_layout" string="View Architecture" widget="ace" options="{'mode': 'xml'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="report_pdf_config_action" model="ir.actions.act_window">
        <field name="name">Report PDF UI Configurations</field>
        <field name="res_model">report.pdf.config</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a configurations
            </p><p>
                Create configurations, register report layout.
            </p>
        </field>
    </record>

    <record id="report_pdf_config_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="create_report_pdf_from_ui.report_pdf_config_action"/>
        <field name="view_id" ref="create_report_pdf_from_ui.report_pdf_config_view_tree"/>
    </record>

    <record id="report_pdf_config_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="create_report_pdf_from_ui.report_pdf_config_action"/>
        <field name="view_id" ref="create_report_pdf_from_ui.report_pdf_config_view_form"/>
    </record>

    <menuitem
        id="report_pdf_config_menu"
        name="Report PDF UI Configurations"
        action="create_report_pdf_from_ui.report_pdf_config_action"
        parent="base.reporting_menuitem"
        sequence="10"/>

</odoo>
